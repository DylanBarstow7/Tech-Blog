<h1 class="text-center">Dashboard</h1>

<h5 class="text-center mb-4">Welcome back, <strong>{{user.username}}!</strong></h5>
<div class="d-flex justify-content-center mb-5" id="newbtn">
    <button class="btn btn-success" id="new-post-btn">New Post</button>
</div>

<div class="row mt-4 d-dlex flex-column justify-content-center align-items-center hidden" id="new-post-div">
    <div class="col-md-6 mb-4">
        <h3>New Post:</h3>
        <form class="form new-post-form " id="new-posts">
            <div class="form-group mb-3">
                <label for="title">Title:</label>
                <input class="form-control" type="text" id="title" name="title" />
            </div>
            <div class="form-group mb-3">
                <label for="description">Body:</label>
                <textarea class="form-control" type="textarea" id="body" name="body"></textarea>
            </div>
            <div class="d-flex">
                <div class="form-group m-2">
                    <button type="submit" class="btn btn-primary">Post Posts</button>
                </div>
                <div class="form-group m-2">
                    <button type="submit" class="btn btn-danger" id="abort-btn">Nevermind</button>
                </div>
            </div>
        </form>
    </div>
    <hr> </hr>
</div>


{{#each user.posts as |posts| }}


<div class="card" id={{posts.id}}>
    <div class="d-flex justify-content-between card-header">
        <div>
            {{ format_date posts.createdAt}}
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">{{posts.title}}</h5>
        <p class="card-text">{{posts.content}}</p>
        <a href="/posts/{{posts.id}}" class="btn btn-primary">Edit</a>
    </div>
</div>

{{/each}}

<script src="./js/dashboard.js"></script>
<h1 class="text-center">Dashboard</h1>

<h5 class="text-center mb-4">Welcome back, <strong>{{name}}!</strong></h5>

<div class="row mt-4 d-dlex flex-column justify-content-center align-items-center">
  <div class="col-md-6 mb-4">
    <h3>New Post:</h3>
    <form class="form new-post-form">
      <div class="form-group mb-3">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add New Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <a href="/dashboard/post/{{post.id}}"><button class="btn btn-sm btn-danger">Edit</button></a>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/post.js"></script>

<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  {{#each comments as |comment|}}

    <div class="row mb-2">
      <div class="col-md-8">
        {{comment.title}}
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
      <p>{{comment.description}}</p>
    </div>

    {{/each}}
    
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-title">Comment Title:</label>
      <input class="form-input" type="text" id="comment-title" name="comment-title" />
    </div>
    <div class="form-group">
      <label for="comment-desc">Description:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <div class="form-group">
      <input type="hidden" name="post-id" value="{{id}}" id="post-id"/>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Add New Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>